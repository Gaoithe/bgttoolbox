#!/bin/bash

if [[ "$1" == "" ]] ; then
  echo "usage: xt <servername>"
  exit
fi



#GEOM1=100x63+520+10
GEOM0=100x60+0+0
GEOM1=100x60+520+10
GEOM2=100x60+260+40
GEOM3=100x60+130+160

XDPYDIM=`xdpyinfo |grep "^ *dimensions:"`
if [[ ! ${XDPYDIM//* 1024x*/} ]] ; then 
    echo 1024x something display 
    #GEOM2=94x47+-10--2
    #GEOM3=107x49+177-11
    #GEOM1=85x54--5--8

    #GEOM0=100x46+0+0
    GEOM3=100x45+9-16
    GEOM2=100x51+259-1
    GEOM1=88x54--2+1
    GEOM0=$GEOM3

fi

echo GEOM0 is $GEOM0 XDPYDIM is $XDPYDIM

DEFGEO=" -geometry $GEOM0 "
DEFSBSL=" -sb -sl 5000 "

#xterm $DEFSBSL -j -ls -fn 7x14 -name "Local Shell"
