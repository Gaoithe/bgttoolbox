#!/bin/bash

if [[ "$1" == "" ]] ; then
  echo "usage: xt <servername>"
  exit
fi

while [[ "$1" != "" ]] ; do
  server=$1
  bg=black
  fg=yellow
  command=""

  if [[ $1 == "dspsrv" ]] ; then
    server=www.dspsrv.com
    bg=seagreen
    fg=yellow
  elif [[ $1 == owsla ]] ; then
    #server=owsla.ie.suberic.net
    server=owsla.g.dev.ie.alphyra.com
    bg=#1A1A61
    #bg=blue
    fg=yellow
  elif [[ $1 == jamesh ]] ; then
    echo "/usr/sbin/sshd -d -d must be running on jamesh first"
    server=JamesH@yogi
    #server=JamesH@192.168.3.161
    bg=#1A901a
    fg=yellow
  elif [[ $1 == vnc ]] ; then
    #vncviewer 192.168.1.135 -display :0 &
    echo "hint: JamesH"
    #command="vncviewer host161.sfrd.ie.alphyra.com"
    command="vncviewer yogi"
  elif [[ $1 == kinsey ]] ; then
    bg=#1A1A61
    #bg=blue
    fg=yellow
  elif [[ $1 == doolin ]] ; then
    server=www.doolin.com
    bg=#1A1A61
    fg=yellow
  elif [[ $1 == bakunin ]] ; then
    bg=#400090
    fg=white
  elif [[ $1 == mops-test ]] ; then
    server=mops-test.dub.ie.alphyra.com
    bg=slategrey
    fg=yellow
  elif [[ $1 == mops || $1 == berkman ]] ; then
    server=kathryn@mops.dub.ie.alphyra.com
    bg=slategrey
    fg=yellow
  elif [[ $1 == florence ]] ; then
    server=florence.dub.ie.alphyra.com
    bg=slategrey
    fg=yellow
  else
    bg=seagreen
    fg=yellow    
  fi

  if [[ $command == "" ]] ; then
    command="xterm -geometry 100x60+0+0 -fg $fg -bg $bg -sb -sl 1000 -e ssh $server"
  fi

  echo $command
  `$command`

  shift
done
